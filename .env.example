# Application settings
APP_DEBUG=False
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO

# Telegram API credentials
# For user account authentication
TG_API_ID=your_api_id
TG_API_HASH=your_api_hash
TG_PHONE=+380123456789
TG_PASSWORD=your_2fa_password_if_enabled

# For bot authentication (fallback)
TG_BOT_TOKEN=bot_token_from_botfather

# Target channels to monitor (comma-separated)
TG_CHANNELS=channel1,channel2,channel3

# Database settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=tg_parser
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Map service configuration
MAP_SERVICE=google  # Options: google, osm, apple
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_if_needed